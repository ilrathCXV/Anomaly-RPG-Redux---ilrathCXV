function weapon_mastery()
    local sort = get_locals("sort")
    local mastery = 0
    if sort == "smg" then
        mastery = arpg_m.smg
    elseif sort == "rifle" then
        mastery = arpg_m.rifle
    elseif sort == "sgun" then
        mastery = arpg_m.sgun
    end
    return mastery
end
