function on_key_release(key)
    if (key == menu_key) and is_shift_pressed then
        start()
    end
    if (key == menu_key2) and is_shift_pressed then	-- DEBUG
		xr_sound.set_sound_play(AC_ID, "pda_task")
        arpg_h.points = 100
    end
